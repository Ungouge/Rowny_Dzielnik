<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Button" x:Key="ObliczPrzycisk">
        <Setter Property="Content" Value="Oblicz"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Height" Value="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor}, Path=ElementWyskokosc}"/>
        <Setter Property="IsEnabled" Value="{Binding CanExecute}"/>
        <Setter Property="Command" Value="{Binding }"/>
    </Style>

</ResourceDictionary>