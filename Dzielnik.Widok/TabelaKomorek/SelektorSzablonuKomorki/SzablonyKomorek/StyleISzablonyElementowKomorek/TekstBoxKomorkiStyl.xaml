<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="TextBoxKomorkiStylBaza" TargetType="TextBox">
        <Setter Property="FontSize" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}, Path=CzcionkaRozmiar}"/>
    </Style>

    <Style x:Key="TekstBoxKomorkiStyl" TargetType="TextBox" BasedOn="{StaticResource TextBoxKomorkiStylBaza}">
        <Setter Property="Text" Value="{Binding Tekst, Mode=TwoWay}"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

</ResourceDictionary>