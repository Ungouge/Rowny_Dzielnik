<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="KomorkaStyl" TargetType="ContentPresenter">
        <Setter Property="Grid.Column" Value="{Binding Kolumna}" />
        <Setter Property="Grid.Row" Value="{Binding Rzad}" />
        <Setter Property="Width" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}, Path=ElementSzerokosc}"/>
        <Setter Property="Height" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}, Path=ElementWysokosc}"/>
    </Style>

</ResourceDictionary>